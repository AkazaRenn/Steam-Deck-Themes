{
    "name": "Smaller Quick Access Tabs",
    "version": "v1.0",
    "author": "RasitAyaz",
    "manifest_version": 5,
    "target": "Tweak",
    "description": "Reduces the height of quick access tabs to save some space and overcome glitches.",
    "inject": {
        "shared.css": [
            "QuickAccess"
        ]
    },
    "patches": {
        "Tab Size": {
            "default": "Square",
            "type": "slider",
            "values": {
                "Square": {
                    "--qamTab-size": [
                        "48px",
                        "QuickAccess"
                    ]
                },
                "Compact": {
                    "--qamTab-size": [
                        "52px",
                        "QuickAccess"
                    ]
                },
                "Default": {
                    "--qamTab-size": [
                        "56px",
                        "QuickAccess"
                    ]
                }
            }
        }
    }
}