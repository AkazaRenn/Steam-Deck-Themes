{
    "name": "Switch Like Home",
    "version": "v1.1",
    "author": "SuchMeme",
    "target": "Home",
	"manifest_version": 2,
	"description": "Bottom alligns the recent games list, removes the 'recent games' text and moves the game name above the selected game",
    "inject": {
        "shared.css": [
            "SP"
        ] 
    },
    "patches": {
        "No Friends": {
            "default": "No",
            "type": "checkbox",
            "values": {
                "No": {},
                "Yes": {
                    "nofriends.css": [ "SP" ]
                }
            }
        }
    }
}