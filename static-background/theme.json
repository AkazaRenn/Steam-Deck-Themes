{
    "name": "Static Background",
    "version": "v2.0",
    "author": "SuchMeme",
    "target": "System-Wide",
    "manifest_version": 4,
    "description": "Injects custom backgrounds selectively into Home, Library, Search and Friends & Chat. You can select your own image via a file picker for each screen. Default image is sourced from https://unsplash.com/photos/NS0jhXpw2FM",
    "patches": {
        "Home": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {
                    "home.css": ["SP"]
                },
                "No": {}
            },
            "components": [
                {
                    "name": "Home Background",
                    "type": "image-picker",
                    "on": "Yes",
                    "default": "Static Background/background.jpg",
                    "css_variable": "sbg-home-background",
                    "tabs": ["SP"]
                }
            ]
        },
        "Library": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {
                    "library.css": ["SP"]
                },
                "No": {}
            },
            "components": [
                {
                    "name": "Library Background",
                    "type": "image-picker",
                    "on": "Yes",
                    "default": "Static Background/background.jpg",
                    "css_variable": "sbg-library-background",
                    "tabs": ["SP"]
                }
            ]
        },
        "Search": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {
                    "search.css": ["SP"]
                },
                "No": {}
            },
            "components": [
                {
                    "name": "Search Background",
                    "type": "image-picker",
                    "on": "Yes",
                    "default": "Static Background/background.jpg",
                    "css_variable": "sbg-search-background",
                    "tabs": ["SP"]
                }
            ]
        },
        "Friends": {
            "type": "checkbox",
            "default": "No",
            "values": {
                "Yes": {
                    "friends.css": ["SP"]
                },
                "No": {}
            },
            "components": [
                {
                    "name": "Friends Background",
                    "type": "image-picker",
                    "on": "Yes",
                    "default": "Static Background/background.jpg",
                    "css_variable": "sbg-friends-background",
                    "tabs": ["SP"]
                }
            ]
        },
        "Global Brightness": {
            "type": "slider",
            "default": ".5",
            "values": {
                ".1": {
                    "brightness/10.css": ["SP"]
                },
                ".2": {
                    "brightness/20.css": ["SP"]
                },
                ".3": {
                    "brightness/30.css": ["SP"]
                },
                ".4": {
                    "brightness/40.css": ["SP"]
                },
                ".5": {
                    "brightness/50.css": ["SP"]
                },
                ".6": {
                    "brightness/60.css": ["SP"]
                },
                ".7": {
                    "brightness/70.css": ["SP"]
                },
                ".8": {
                    "brightness/80.css": ["SP"]
                },
                ".9": {
                    "brightness/90.css": ["SP"]
                },
                "1": {
                    "brightness/100.css": ["SP"]
                }
            }
        }
    }
}